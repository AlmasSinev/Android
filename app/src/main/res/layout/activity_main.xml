<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/colorBackground">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/calculating_edit"
        android:layout_weight="1.5"
        android:textColor="#4B4B4B"
        android:textSize="40dp"
        android:hint="0"
        android:textAlignment="viewEnd"
        android:layout_gravity="end"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:paddingRight="25dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/a_lcdnova"
        android:background="@drawable/result_form"
        android:maxLength="11"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="2"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="90dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/btn_c"
                android:text="C"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#525252"
                android:onClick="onClickListenerBtn"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:background="@drawable/btn_special_form"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/btn_7"
                android:text="7"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#525252"
                android:onClick="onClickListenerBtn"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:background="@drawable/btn_form"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/btn_4"
                android:text="4"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#525252"
                android:onClick="onClickListenerBtn"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:background="@drawable/btn_form"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/btn_1"
                android:text="1"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#525252"
                android:onClick="onClickListenerBtn"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:background="@drawable/btn_form"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/btn_percent"
                android:text="%"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#525252"
                android:onClick="onClickListenerBtn"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:background="@drawable/btn_form"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/btn_del"
                android:text="/"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#525252"
                android:onClick="onClickListenerBtn"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:background="@drawable/btn_special_form"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/btn_8"
                android:text="8"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#525252"
                android:onClick="onClickListenerBtn"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:background="@drawable/btn_form"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/btn_5"
                android:text="5"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#525252"
                android:onClick="onClickListenerBtn"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:background="@drawable/btn_form"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/btn_2"
                android:text="2"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#525252"
                android:onClick="onClickListenerBtn"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:background="@drawable/btn_form"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/btn_0"
                android:text="0"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#525252"
                android:onClick="onClickListenerBtn"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:background="@drawable/btn_form"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/btn_x"
                android:text="x"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#525252"
                android:onClick="onClickListenerBtn"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:background="@drawable/btn_special_form"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/btn_9"
                android:text="9"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#525252"
                android:onClick="onClickListenerBtn"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:background="@drawable/btn_form"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/btn_6"
                android:text="6"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#525252"
                android:onClick="onClickListenerBtn"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:background="@drawable/btn_form"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/btn_3"
                android:text="3"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#525252"
                android:onClick="onClickListenerBtn"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:background="@drawable/btn_form"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/btn_dot"
                android:text=","
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#525252"
                android:onClick="onClickListenerBtn"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:background="@drawable/btn_form"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_delete"
                android:text="del"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#525252"
                android:onClick="onClickListenerBtn"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:background="@drawable/btn_form"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_minus"
                android:text="-"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#525252"
                android:onClick="onClickListenerBtn"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:background="@drawable/btn_form"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_plus"
                android:text="+"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#525252"
                android:onClick="onClickListenerBtn"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:background="@drawable/btn_form"/>

            <Button
                android:id="@+id/btn_equals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="5.5"
                android:background="@drawable/btn_form"
                android:text="="
                android:textColor="#525252"
                android:textSize="20dp"
                android:textStyle="bold" />


        </LinearLayout>
    </LinearLayout>
</LinearLayout>